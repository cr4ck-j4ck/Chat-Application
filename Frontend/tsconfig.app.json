{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": false,                // ⬅️ build karega even if errors

    "jsx": "react-jsx",

    /* Make it loose */
    "strict": false,                // ⬅️ all strict checks off
    "noImplicitAny": false,         // ⬅️ missing types = any
    "strictNullChecks": false,      // ⬅️ null/undefined allowed everywhere
    "noUnusedLocals": false,        // ⬅️ unused variable = no error
    "noUnusedParameters": false,    // ⬅️ unused function args = no error
    "noFallthroughCasesInSwitch": false, // ⬅️ switch case fallthrough allowed
    "noUncheckedSideEffectImports": false, // ⬅️ stop complaining about imports
    "noEmitOnError": false,         // ⬅️ don’t block build on type errors
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src"
  ]
}
